   "source": [
    "# Задача 1\n",
    "Определите шаг резьбы, если угол подъема резьбы равен $2.60^\\circ$, а средний диаметр 14 мм."
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 6,
   "metadata": {},
   "outputs": [
    {
     "name": "stdout",
     "output_type": "stream",
     "text": [
      "Шаг резьбы p = 1.997\n"
     ]
    }
   ],
   "source": [
    "import math\n",
    "\n",
    "# исходные данные\n",
    "psi = 2.60\n",
    "d_2 = 14\n",
    "\n",
    "# решение\n",
    "p = d_2 * math.tan(math.radians(psi)) * math.pi\n",
    "p = round(p, 3)\n",
    "\n",
    "print(f'Шаг резьбы p = {p} мм')"
   ]
  }
 ],
